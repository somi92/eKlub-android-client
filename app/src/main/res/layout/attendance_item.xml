<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dip"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lblMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milos Stojanovic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_below="@+id/lblMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblLateMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kasnjenje: "
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#BA0000"
            android:textSize="23sp"/>

        <EditText
            android:id="@+id/txtLateMin"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BA0000"
            android:textSize="23dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:paddingTop="30dip"
        android:paddingRight="20dip">

        <CheckBox
            android:id="@+id/chbIsAttendant"
            android:scaleX="2.1"
            android:scaleY="2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>