<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rs.fon.eklubmobile.activities.TrainingActivity">

    <TextView
        android:id="@+id/lblDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblDateTime"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/lblDateTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblDateTimePattern"
        android:textSize="17dp"
        android:layout_below="@+id/lblDateTime"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/btnDate"
        android:src="@drawable/ic_date_range_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnTime"
        android:layout_below="@+id/lblDateTime"
        style="?android:attr/borderlessButtonStyle" />

    <ImageButton
        android:id="@+id/btnTime"
        android:src="@drawable/ic_av_timer_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblDateTime"
        style="?android:attr/borderlessButtonStyle" />

    <Spinner
        android:id="@+id/spnGroup"
        android:textSize="15dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDateTimeValue"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/lblDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtDuration"
        android:layout_below="@+id/spnGroup"
        android:textSize="15dp"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/txtDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="15dp"
        android:layout_below="@+id/lblDuration" />

    <TextView
        android:id="@+id/lblDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtDescription"
        android:layout_below="@+id/txtDuration"
        android:textSize="15dp"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/txtDescription"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="20"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:textSize="15dp"
        android:layout_below="@+id/lblDescription" />

    <Button
        android:id="@+id/btnAttendances"
        android:text="@string/btnAttendances"
        android:drawableLeft="@drawable/ic_group_black_24dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
