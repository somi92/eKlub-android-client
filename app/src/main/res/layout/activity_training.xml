<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rs.fon.eklubmobile.activities.TrainingActivity">

    <TextView
        android:id="@+id/lblDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblDateTime"
        android:textSize="17dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblDate"
        android:layout_toLeftOf="@+id/btnTime"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/btnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblTime"
        android:layout_alignParentRight="true"
        style="?android:attr/borderlessButtonStyle" />

    <EditText
        android:id="@+id/txtDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/txtDuration"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/lblDateTime"
        android:layout_marginTop="10dp" />

    <Spinner
        android:id="@+id/spnGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDuration"
        android:layout_marginTop="15dp" />

</RelativeLayout>
